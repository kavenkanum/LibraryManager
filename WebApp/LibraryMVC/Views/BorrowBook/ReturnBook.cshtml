@model LibraryMVC.Domain.Entities.Book
@{
    ViewData["Title"] = "Return book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tytuł "@Model.Name"</br>
    Autor: @Model.Author</h2>
<h3>Are you sure you want to return that book?</h3>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Return" class="btn btn-default" />
            <a href="@Url.Action("SelectBorrowingUser", "BorrowBook")" class="btn btn-default">Cancel</a>
        </div>
    }
</div>

