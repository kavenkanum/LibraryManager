@model IEnumerable<LibraryMVC.Domain.Entities.User>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of the users</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int a = 1;}
        @foreach (var user in Model)
        {
            <tr>
                <td>@(a++)</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    @if (user.Status == LibraryMVC.Domain.Entities.Status.Active)
                        {
                    <span>Active</span>
                        }
                    @if(user.Status != LibraryMVC.Domain.Entities.Status.Active)
                        {
                    <span>Inactive</span>
                        }
                </td>
                <td>
                    <a href="@Url.Action("View", "User", new { id = user.ID })" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>View</a>
                    <a href="@Url.Action("Edit", "User", new { id = user.ID })" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>