@using Microsoft.AspNetCore.Identity
@using LibraryMVC.Domain.Entities

@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserMaganer


@if (SignInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav">
        <li><a href="@Url.Action("Logout", "Account")">Log out</a></li>
        <li><a>Hello @UserMaganer.GetUserName(User)!</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a href="@Url.Action("Register", "Account")">Sign up</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("Login", "Account")">Sign in</a>
        </li>
    </ul>
}
