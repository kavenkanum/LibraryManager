@model LibraryMVC.Controllers.AddImageModel
@{
    ViewData["Title"] = "Add image";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="POST" enctype="multipart/form-data" asp-controller="Book" asp-action="AddImage">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload image</p>
            <input type="file" name="Image" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
